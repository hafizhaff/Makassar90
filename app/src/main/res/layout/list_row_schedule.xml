<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView_bandsched" />

    <TextView
        android:text="Nama Band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_namaband"
        android:textSize="30sp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2_stage"
        android:layout_below="@+id/textView_namaband"
        android:layout_alignLeft="@+id/textView_namaband"
        android:layout_alignStart="@+id/textView_namaband" />

    <TextView
        android:text="Jadwal Manggung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2_stage"
        android:layout_alignLeft="@+id/textView2_stage"
        android:layout_alignStart="@+id/textView2_stage" />
</RelativeLayout>